	fedora\:25-ppc64le \
	fedora\:25-aarch64 \
	fedora\:24-x86_64 \
	centos\:7.3-aarch64-clean \
	centos\:7.3-amd64-clean \
	centos\:7.2-amd64-clean \
	debian-debootstrap\:ppc64el-stretch \
